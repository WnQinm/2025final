{
    "model_path": "./checkpoint/m3/",
    "tokenizer_path": "./checkpoint/m3/",
    "normlized": true,
    "negatives_cross_device": false,
    "temperature": 0.02,
    "encode_sub_batch_size": 1,
    "train_with_qlora": true,
    "train_with_fp16": false,
    "train_with_lora": true,
    "lora_modules": [
        "encoder.layer.14.attention.self.query",
        "encoder.layer.14.attention.self.value",
        "encoder.layer.15.attention.self.query",
        "encoder.layer.15.attention.self.value",
        "encoder.layer.16.attention.self.query",
        "encoder.layer.16.attention.self.value",
        "encoder.layer.17.attention.self.query",
        "encoder.layer.17.attention.self.value",
        "encoder.layer.18.attention.self.query",
        "encoder.layer.18.attention.self.value",
        "encoder.layer.19.attention.self.query",
        "encoder.layer.19.attention.self.value",
        "encoder.layer.20.attention.self.query",
        "encoder.layer.20.attention.self.value",
        "encoder.layer.21.attention.self.query",
        "encoder.layer.21.attention.self.value",
        "encoder.layer.22.attention.self.query",
        "encoder.layer.22.attention.self.value",
        "encoder.layer.23.attention.self.query",
        "encoder.layer.23.attention.self.value"
    ],

    "drug_data": "./data/drugs.json",
    "pos2neg": "./data/drugs_neg.json",
    "link_data": "./data/links.json",
    "train_group_size": 8,
    "input_max_len": 1024,
    "query_instruction_for_retrieval": null,
    "passage_instruction_for_retrieval": null,

    "fix_position_embedding": false,
    "output_dir": "./output",
    "per_device_train_batch_size": 1,
    "gradient_accumulation_steps": 1,
    "learning_rate": 1e-5,
    "num_train_epochs": 5,
    "logging_steps": 10,
    "save_steps": 1000,
    "dataloader_drop_last": true,
    "dataloader_num_workers": 0,
    "save_total_limit": 5,
    "optim": "paged_adamw_32bit",
    "adam_epsilon": 1e-4,
    "gradient_checkpointing": false
}